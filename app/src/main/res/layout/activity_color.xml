<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jkn.colortest.ColorActivity">

    <FrameLayout
        android:id="@+id/color_field"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#b12121">

        <TextView
            android:id="@+id/color_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Peanut Butter"
            android:textSize="30sp"
            android:textColor="#fff"
            android:layout_gravity="bottom"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp" />
    </FrameLayout>

    <LinearLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:alpha="0.87"
                android:textSize="20sp"
                android:text="H"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_marginRight="20dp" />

            <SeekBar
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/bar_saturation"
                android:indeterminate="false"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:alpha="0.87"
                android:textSize="20sp"
                android:text="S"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_marginRight="20dp" />

            <SeekBar
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/bar_hue"
                android:indeterminate="false"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:alpha="0.87"
                android:textSize="20sp"
                android:text="V"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_marginRight="20dp" />

            <SeekBar
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/bar_value"
                android:indeterminate="false"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
